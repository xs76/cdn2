                        <script>
            // var enableFlashDisclaimer = document.getElementById("enableFlashDisclaimer");
            // if(enableFlashDisclaimer) {
            //     enableFlashDisclaimer.style.display = "none";
            // }
            var showDisclaimer = function () {
                if (document.getElementById("flashContent")) {
                    document.getElementById("flashContent").style.display = "none";
                }
                var enableFlashDisclaimer = document.getElementById("enableFlashDisclaimer");
                if(enableFlashDisclaimer) {
                    enableFlashDisclaimer.style.display = "block";
                    enableFlashDisclaimer.style.zIndex = 99999;
                    var enableFlashBtn = document.getElementById("enableFlash");
                    if (enableFlashBtn) {
                        enableFlashBtn.addEventListener("click", function(ev) {
                            var firstStep = document.getElementById("first-step");
                            var secondStep = document.getElementById("second-step");
                            if (firstStep) {
                                firstStep.style.display = "none";
                            }
                            if (secondStep) {
                                secondStep.style.display = "block";
                            }
                        });
                    }
                }
            }
            window.addEventListener('load', function() {
                window.RufflePlayer.config = {
                    autoplay: 'on',
                    unmuteOverlay: 'hidden',
                    "allowScriptAccess": false,
                    // "autoplay": "auto",
                    // "unmuteOverlay": "visible",
                    "backgroundColor": null,
                    "wmode": "window",
                    "letterbox": "fullscreen",
                    "warnOnUnsupportedContent": false,
                    "contextMenu": "on",
                    "showSwfDownload": false,
                    "upgradeToHttps": window.location.protocol === "https:",
                    "maxExecutionDuration": 15,
                    "logLevel": "error",
                    "base": null,
                    "menu": true,
                    "salign": "",
                    "forceAlign": false,
                    "scale": "showAll",
                    "forceScale": false,
                    "frameRate": null,
                    "quality": "high",
                    "splashScreen": false,
                    "preferredRenderer": null,
                    "openUrlMode": "allow",
                    "allowNetworking": "all",
                    "favorFlash": true,
                };
                const ruffle = window.RufflePlayer.newest();
                let player = ruffle.createPlayer();
                const container = document.getElementById("flashContent");
                container.appendChild(player);
                player.load({
                    url: "https://www.minijuegosgratis.com/flash1234/no_hotlink/hitman2christmas.swf",
                }).then(()=>{
                        console.info("Ruffle successfully loaded the file");
                    }
                ).catch((e)=>{
                        console.error("Ruffle failed to load the file: "+e);
                        showDisclaimer()
                    }
                );
                player.style.width = "100%";
                player.style.height = "100%";
                player.addEventListener('loadedmetadata', (e)=> {
                    if (false && player.metadata.isActionScript3) {
                        // Fallback to away player
                        document.getElementById("flashContent").remove();
                        player.panic();
                        var progress = document.getElementById("flashContentProgress");
                        var percent = document.getElementById("flashContentProgressPercent");
                        progress.style.display = 'block';
                        var awayGameConfig = {
                            width: "100%",
                            height: "100%",
                            splash: 'https://www.minijuegosgratis.com/v3/games/thumbnails/243_1.jpg',
                            baseUrl: 'https://ext.minijuegosgratis.com/away-player/20220907/',
                            runtime: ['https://ext.minijuegosgratis.com/away-player/20220907//runtime.js'],
                            binary: [{
                                path: 'https://www.minijuegosgratis.com/flash1234/no_hotlink/hitman2christmas.swf',
                                resourceType: 'GAME',
                                name: 'Game', // not used atm
                                meta: {} // not used atm
                            }]
                        };
                        AWAYFL.LegacyLoader.init(awayGameConfig);
                        AWAYFL.LegacyLoader.runGame((fill) => {
                            percent.innerText = Math.round(fill * 100) + ' %';
                            // window.dispatchEvent(new CustomEvent('awayfl-player-progress', {detail: fill}));
                            //
                        }, (config, hideLoader) => {
                            progress.style.zIndex = 0;
                            const awayPlayer = new AWAYFL.Player(document, config);
                            window.dispatchEvent(new CustomEvent('awayfl-player-init', {detail: player}));
                            awayPlayer
                                .loadAndPlay()
                                .then((_, hide) => {
                                    window.dispatchEvent(new CustomEvent('awayfl-player-load'));
                                    hide && hide();
                                }).catch(() => {
                                    showDisclaimer();
                                });
                        });
                    }
                });
            });
        </script>


